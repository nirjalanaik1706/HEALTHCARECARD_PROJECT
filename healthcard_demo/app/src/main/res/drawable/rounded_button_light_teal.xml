<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#4DD0E1" /> <!-- Light Teal -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Padding -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#0097A7" /> <!-- Darker teal for outline -->
</shape>
