<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Semi-transparent white for glass effect -->
    <solid android:color="#40FFFFFF"/> <!-- 25% opacity -->

    <!-- Optional border to make it pop -->
    <stroke
        android:width="2dp"
        android:color="#80FFFFFF"/> <!-- 50% opacity white -->

    <!-- Rounded corners (change to 0dp for fully rectangular) -->
    <corners android:radius="25dp"/>

    <!-- Optional inner padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
