<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00838F" /> <!-- Darker teal when pressed -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#006064" />
            <padding android:left="16dp" android:top="10dp" android:right="16dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/teal_primary" />
            <corners android:radius="8dp" />
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
        </shape>
    </item>

</selector>
